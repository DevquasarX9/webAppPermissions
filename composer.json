    "ext-pdo": "*",
    "ext-pgsql": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.88"
  },
  "authors": [
    {
      "name": "Ivelin Ivanov",
      "email": "ivelin.ivanov4@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
